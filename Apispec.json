                    }
                ],
                "tags": [
                    "Shortner Link API"
                ],
                "description": "Short link",
                "summary": "Short link",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "url": {
                                        "type": "string",
                                        "example": "https://www.google.com/ultra-long-url"
